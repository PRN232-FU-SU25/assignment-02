@page "{id:int}"
@model AccountEditModel
@{
    ViewData["Title"] = "Chỉnh sửa Tài khoản";
}

<h3>@ViewData["Title"] - @Model.Id</h3>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.AccountName" class="form-label"></label>
        <input asp-for="Input.AccountName" class="form-control" />
        <span asp-validation-for="Input.AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.AccountEmail" class="form-label"></label>
        <input asp-for="Input.AccountEmail" class="form-control" />
        <span asp-validation-for="Input.AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.AccountRole" class="form-label"></label>
        <select asp-for="Input.AccountRole"
                class="form-select"
                asp-items="Model.RoleOptions">
            <option value="">-- Chọn vai trò --</option>
        </select>
        <span asp-validation-for="Input.AccountRole" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
