@page
@model NewsCreateModel
@{
    ViewData["Title"] = "Tạo Tin";
}

<h3>@ViewData["Title"]</h3>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.NewsTitle" class="form-label"></label>
        <input asp-for="Input.NewsTitle" class="form-control" />
        <span asp-validation-for="Input.NewsTitle" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Headline" class="form-label"></label>
        <input asp-for="Input.Headline" class="form-control" />
        <span asp-validation-for="Input.Headline" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.NewsContent" class="form-label"></label>
        <textarea asp-for="Input.NewsContent" class="form-control"></textarea>
        <span asp-validation-for="Input.NewsContent" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.NewsSource" class="form-label"></label>
        <input asp-for="Input.NewsSource" class="form-control" />
        <span asp-validation-for="Input.NewsSource" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.CategoryId" class="form-label"></label>
        <select asp-for="Input.CategoryId" class="form-select" asp-items="Model.CategoryOptions">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>