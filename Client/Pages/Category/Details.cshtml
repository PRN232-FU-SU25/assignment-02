@page "{id:int}"
@model CategoryDetailsModel
@{
	ViewData["Title"] = "Chi tiết Danh mục";
}
<h3>@ViewData["Title"] - @Model.Category.CategoryId</h3>
<dl class="row">
	<dt class="col-sm-2">Tên</dt>
	<dd class="col-sm-10">@Model.Category.CategoryName</dd>
	<dt class="col-sm-2">Mô tả</dt>
	<dd class="col-sm-10">@Model.Category.CategoryDesciption</dd>
	<dt class="col-sm-2">Active</dt>
	<dd class="col-sm-10">@(Model.Category.IsActive == true ? "Yes" : "No")</dd>
</dl>
<a asp-page="Index" class="btn btn-secondary">Quay về</a>