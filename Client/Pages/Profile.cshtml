@page
@model ProfileModel
<h3>Profile</h3>
<dl class="row">
	<dt class="col-sm-2">ID</dt>
	<dd class="col-sm-10">@Model.Me.AccountId</dd>
	<dt class="col-sm-2">Name</dt>
	<dd class="col-sm-10">@Model.Me.AccountName</dd>
	<dt class="col-sm-2">Email</dt>
	<dd class="col-sm-10">@Model.Me.AccountEmail</dd>
	<dt class="col-sm-2">Role</dt>
	<dd class="col-sm-10">@(Model.Me.AccountRole == 1 ? "Staff" : Model.Me.AccountRole == 2 ? "Lecturer" : "Admin")</dd>
</dl>